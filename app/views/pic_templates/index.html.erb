<h1> All Photos </h1>

<!--Add a new photo-->


<% @all_pics.each do |photo| %>

<p> 
    <%= photo.caption %>
</p>

<img src="<%= photo.source %>">

<a href="/photos/<%= photo.id %>" class="btn btn-default">
  Show details
</a>

<a href="/photos/<%= photo.id %>/edit" class="btn btn-default">
  Edit
</a>

<a href="/delete_photo/<%= photo.id %>" class="btn btn-default">
  Delete
</a>


<%end%>

